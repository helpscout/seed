{
  "name": "seed-grid",
  "version": "0.0.1",
  "description": "Grid system pack for Seed",
  "main": "index.js",
  "homepage": "https://github.com/helpscout/seed-grid",
  "scripts": {
    "banner": "node banner.js",
    "build": "npm run build:main && npm run build:min && npm run banner",
    "build:main": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets scss/pack/_seed-grid.scss dist/seed-grid.css",
    "build:min": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets scss/pack/_seed-grid.scss dist/seed-grid.min.css --output-style compressed",
    "test": "node test.js && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helpscout/seed-grid.git"
  },
  "authors": [
    "ItsJonQ <itsjonq@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helpscout/seed-grid/issues"
  },
  "engines": {
    "node": ">=0.10.1"
  },
  "devDependencies": {
    "bourbon": "^4.2.7",
    "node-sass": "^3.8.0"
  }
}
