{
  "name": "@seedcss/seed",
  "version": "0.0.1",
  "description": "A component-first CSS design system.",
  "scripts": {
    "stubpostinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "clean": "lerna clean",
    "clean:lock": "find ./packages -type f -name \"package-lock.json\" -delete",
    "diff": "lerna diff",
    "distclean": "lerna clean --yes && rm -rf node_modules",
    "release": "lerna publish",
    "test": "lerna run test",
    "updated": "lerna updated || exit 0",
    "update:pkg": "node ./scripts/update-pkg.js"
  },
  "homepage": "https://github.com/helpscout/seed",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helpscout/seed.git"
  },
  "authors": [
    "ItsJonQ <hello@jonquach.com>"
  ],
  "license": "MIT",
  "keywords": [
    "bem",
    "component",
    "components",
    "css",
    "design",
    "functional",
    "helpscout",
    "itcss",
    "modular",
    "oocss",
    "performance",
    "seed",
    "scss",
    "system"
  ],
  "devDependencies": {
    "glob": "^7.1.3",
    "hoek": "^5.0.3",
    "lerna": "^3.4.0",
    "node-sass": "^4.9.3"
  }
}
